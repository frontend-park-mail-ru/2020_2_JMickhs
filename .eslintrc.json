{
    "env": {
        "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "max-len": ["error", { "code": 120 }],
        "indent": [
            "error",
            4
        ],
        "no-console": 2
    },
    "overrides": [
        {
            "files": ["*.js"],
            "extends": ["eslint:recommended",
                        "google"],
            "rules": {
                "max-len": ["error", { "code": 120 }],
                "indent": ["error", 4]
            }
        },
        {
            "files": ["*.ts"],
            "extends": ["plugin:@typescript-eslint/eslint-recommended",
                        "plugin:@typescript-eslint/recommended"],
            "rules": {
                "max-len": ["error", { "code": 120 }],
                "indent": ["error", 4],
                "semi": [2, "always"]
            }
        }
    ]
}
