{{#if error}}
    <div class="home__container-list-all" id="container">
        <form class="home__search" id="search-form">
            <input class="home__search-input" id="input" type="text" placeholder="Введите отель или его адрес..."/>
            <button class="home__button-orange home__button-orange--size" id="search-button">Искать</button>
        </form>
        <div class="home__list" id="list">
            <div class="home__error">
                <div class="home__message-container">
                    <h4 class="home__error--blue">{{error}}</h4>
                </div>
            </div>
        </div>
    </div>
{{else}}
    <div class="home__container-all" id="container">
        <form class="home__search" id="search-form">
            <input class="home__search-input" id="input" type="text" placeholder="Введите отель или его адрес..."/>
            <button class="home__button-orange home__button-orange--size" id="search-button">Искать</button>
        </form>
        <div class="home__list" id="list"></div>
    </div>
{{/if}}
